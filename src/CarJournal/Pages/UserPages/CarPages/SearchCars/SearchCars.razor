@page "/cars/search"

<MudStack Direction="Row" Spacing="2">
    <MudButton OnClick="OnExpandCollapseClick">@(_expanded ? "Collapse Filters" : "Expand Filters")</MudButton>
        <MudDivider />
     <MudCollapse Expanded="_expanded">
                  <MudTextField @bind-Value="ViewModel.Vendor" Label="Vendor" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.Model" Label="Model" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.Year" Label="Year" Variant="Variant.Outlined" />
     </MudCollapse>
</MudStack>

@for(int i = 0; i < 8; i++)
{
    <MudCard Style="margin: 10px 10px; padding: 20px;">
    <MudGrid>
        @* <MudItem xs="12" md="3">
            <MudImage Src="car-image.jpg" Alt="Mercedes-Benz E-Class 2017" />
            <MudPaper>

            </MudPaper>
        </MudItem> *@
        <MudItem xs="12" md="6">
            <MudText Typo="Typo.h6">Mercedes-Benz E-Class 2017</MudText>
            <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Start" Class="mt-3">
                <MudIcon Icon="@Icons.Material.Outlined.LocalGasStation" />
                <MudText Typo="Typo.body2">Дизель, 2 л.</MudText>
                <MudIcon Icon="@Icons.Material.Outlined.Settings" Class="ml-4" />
                <MudText Typo="Typo.body2">Автомат</MudText>
            </MudStack>
            <MudText Typo="Typo.body1" Style="margin: 10px 0px;" Class="mt-3 margin-top-3 margin-bottom-3">
                idk, якийсь може опис
            </MudText>
            <MudButton Variant="@_variant" Color="Color.Primary" Class="margin-top-3 margin-bottom-3">Details</MudButton>
        </MudItem>
    </MudGrid>
</MudCard>
<MudDivider />
}

@code {
    private Variant _variant = Variant.Outlined;

    public SearchCarsViewModel ViewModel { get; set; } = new SearchCarsViewModel();

    bool _expanded = false;

    private void OnExpandCollapseClick() {
        _expanded = !_expanded;
    }
}
